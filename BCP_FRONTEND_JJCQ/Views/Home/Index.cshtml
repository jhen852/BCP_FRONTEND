@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <h1 class="display-4">CUENTAS</h1>
    @*<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>*@
</div>
<div class="card">
    <div class="card-header"> 
    </div>
    <div class="card-body">
        <a asp-action="Producto" asp-controller="Home" asp-route-idProducto="0" class="btn btn-success btn-sm">Nuevo cuenta</a>
        @*<a asp-action="test" asp-controller="Home" class="btn btn-success">test</a>*@
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>N°</th>
                    <th>TIPO</th>
                    <th>MONEDA</th>
                    <th>CUENTA</th>
                    <th>TITULAR</th>
                    <th>SALDO</th>
                    <th>MOV</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var Cuenta in Model){
                    int contador = 1;
                    <tr>
                        <td>@contador</td>
                        <td>@Cuenta.tipo</td>
                        <td>@Cuenta.moneda</td>
                        <td>@Cuenta.nro_cuenta</td>
                        <td>@Cuenta.nombre</td>
                        <td>@Cuenta.saldo</td>
                        <td>
                            <a asp-action="producto" asp-controller="home" asp-route-idproducto="@Cuenta.nro_cuenta" class="btn btn-primary btn-sm" >editar</a>
                            <a asp-action="eliminar" asp-controller="home" asp-route-idproducto="@Cuenta.nro_cuenta" class="btn btn-danger btn-sm" >eliminar</a>
                        </td>
                    </tr>
                    contador++;
                }
            </tbody>
        </table>
    </div>

</div>